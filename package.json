{
  "name": "rbu-trickster",
  "version": "1.0.0",
  "private": true,
  "description": "RBU Trickster - Real-time multiplayer contract bridge training app",
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @bridge/server dev\" \"yarn workspace @bridge/client dev\"",
    "dev:server": "yarn workspace @bridge/server dev",
    "dev:client": "yarn workspace @bridge/client dev",
    "build": "yarn workspace @bridge/shared build && yarn workspace @bridge/server build && yarn workspace @bridge/client build",
    "build:server": "yarn workspace @bridge/server build",
    "build:client": "yarn workspace @bridge/client build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
